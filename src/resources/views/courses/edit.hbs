<div class="mt-4">
    <h3>Create Courses</h3>
    <form action="/courses/{{course._id}}?_method=PUT" method="POST">
        <div class="form-group">
            <label for="description">Tên khóa học</label>
            <input type="text" class="form-control" id="name" name="name" value="{{course.name}}">
        </div>
        <div class="form-group">
            <label for="description">Mô tả khóa học</label>
            <input type="text" class="form-control" id="description" name="description" value="{{course.description}}">
        </div>
        <div class="form-group">
            <label for="description">Video ID</label>
            <input type="text" class="form-control" id="videoId" name="videoId" value="{{course.videoId}}">
        </div>
        <div class="form-group">
            <label for="description">Level</label>
            <input type="text" class="form-control" id="level" name="level" value="{{course.level}}">
        </div>
        
        <button type="submit" class="btn btn-primary">Create Courses</button>
    </form>
</div>